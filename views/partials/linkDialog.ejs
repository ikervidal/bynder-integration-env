<div class="modal" tabindex="-1" role="dialog" id="linkModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="linkForm">
                    <div class="form-group row">
                        <label for="linkToType" class="col-sm-3 col-form-label">Link to</label>
                        <div class="col-sm-9">
                            <select id="linkToType" class="custom-select">
                                <option value="http" selected>Website (http://)</option>
                                <option value="https">Secure Website (https://)</option>
                                <option value="email">Email Address (mailto:)</option>
                            </select>
                        </div>
                    </div>

                    <div id="linkUrl" class="form-group row">
                        <label for="linkUrlInput" class="col-sm-3 col-form-label">Link URL</label>
                        <div class="col-sm-9">
                            <input type="url" id="linkUrlInput" class="form-control" placeholder="Enter URL">
                        </div>
                    </div>

                    <div id="linkAddress" class="form-group row">
                        <label for="linkAddressInput" class="col-sm-3 col-form-label">Address</label>
                        <div class="col-sm-9">
                            <input type="email" pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,4}$" id="linkAddressInput" class="form-control" placeholder="Enter email">
                            <small id="linkAddressHelp" class="form-text text-muted">
                                Invalid email address.
                            </small>
                        </div>
                    </div>
                    
                    <div id="linkSubject" class="form-group row">
                        <label for="linkSubjectInput" class="col-sm-3 col-form-label">Subject</label>
                        <div class="col-sm-9">
                            <input type="text" id="linkSubjectInput" class="form-control" placeholder="Enter subject">
                        </div>
                    </div>

                    <hr>

                    <div id="linkTitle" class="form-group row">
                        <label for="linkTitleInput" class="col-sm-3 col-form-label">Title</label>
                        <div class="col-sm-9">
                            <input type="text" id="linkTitleInput" class="form-control" placeholder="Enter text describing the link">
                        </div>
                    </div>

                    <div id="linkAlias" class="form-group row">
                        <label for="linkAliasInput" class="col-sm-3 col-form-label">Tracking Alias</label>
                        <div class="col-sm-9">
                            <input type="text" id="linkAliasInput" class="form-control" placeholder="Enter tracking alias">
                        </div>
                    </div>

                    <div id="linkConversion" class="custom-control custom-checkbox">
                        <div class="col-sm-3"></div>
                        <div class="col-sm-9">
                            <input type="checkbox" id="linkConvCheckbox" class="custom-control-input">
                            <label class="custom-control-label" for="linkConvCheckbox">Conversion Tracking Link</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn" data-dismiss="modal">Close</button>
                <button id="linkSave" type="button" class="btn saveButton">Save changes</button>
            </div>
        </div>
    </div>
</div>